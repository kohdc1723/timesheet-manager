<?xml version="1.0" encoding="UTF-8"?>
<persistence  xmlns="https://jakarta.ee/xml/ns/persistence"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
              version="3.0">
    <persistence-unit name="timesheetdb-jpa">
        <jta-data-source>java:jboss/datasources/timesheetdb</jta-data-source>
        <class>model.Employee</class>
        <class>model.Timesheet</class>
        <class>model.TimesheetRow</class>
        <class>model.Token</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
